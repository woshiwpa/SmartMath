<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:ads="http://schemas.android.com/apk/lib/com.google.ads"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:id="@+id/linearLayoutCLInputMethod"
    android:orientation="vertical">
	<com.cyzapps.SmartMath.WordSelectionContainer
		android:orientation="horizontal"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:id="@+id/layoutWordSelectionContainer"
		android:background="@color/gray"
		android:visibility="visible">
		<HorizontalScrollView 
			android:layout_width="0dip"
			android:layout_height="fill_parent"
			android:layout_weight="1"
			android:id="@+id/scrollView4WordSelection"
			>
			<LinearLayout 
				android:orientation="horizontal"
				android:layout_width="wrap_content"
				android:layout_height="fill_parent"
				android:id="@+id/layoutWordSelectionBtnHolder"
				>
		    </LinearLayout>
		</HorizontalScrollView>
	</com.cyzapps.SmartMath.WordSelectionContainer>
	<com.cyzapps.SmartMath.ConvenientBtnHolder 
		android:orientation="horizontal"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:id="@+id/layoutConvenientBtnHolder"
		>
	</com.cyzapps.SmartMath.ConvenientBtnHolder>
    <com.cyzapps.SmartMath.InputPadContainer
        android:id="@+id/layoutInputPadContainer"
		android:orientation="vertical"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:background="@color/opaque_black_background"
        android:visibility="visible"
		>
		<ScrollView 
			android:layout_width="fill_parent"
			android:layout_height="fill_parent"
			android:id="@+id/scrollView4InputPad"
			>
			<LinearLayout
				android:orientation="vertical"
				android:layout_width="fill_parent"
				android:layout_height="wrap_content"
				android:id="@+id/layoutInputPadHolder"
				android:visibility="visible"
				>
			</LinearLayout>			
		</ScrollView>
	</com.cyzapps.SmartMath.InputPadContainer>
</LinearLayout>