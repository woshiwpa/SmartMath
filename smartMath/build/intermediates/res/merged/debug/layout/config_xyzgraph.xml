<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/transparent_background"
    >"
<ScrollView 
	android:layout_width="fill_parent"
	android:layout_height="wrap_content"
	>
<LinearLayout android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >
        
    <TextView 
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="@string/zoom_box_prompt"
        android:singleLine="true"
        android:layout_marginTop="16px"
        />
    <LinearLayout 
		android:orientation="horizontal"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
        android:layout_marginTop="6px"
	    >
	    <TextView 
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text="@string/zoom_whole_chart_prompt"
	        android:gravity="center"
	        android:singleLine="true"
	        />
	    <EditText
	        android:id="@+id/zoom_whole_chart_edit"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:singleLine="true"
	        android:minEms="4"
	        android:inputType="numberDecimal"
			 >
		</EditText>
    </LinearLayout>
    
    <LinearLayout 
		android:orientation="horizontal"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
        android:layout_marginTop="6px"
	    >
	    <TextView 
	        android:layout_weight="1"
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:text="@string/zoom_x_prompt"
	        android:gravity="center"
	        android:singleLine="true"
	        />
	    <EditText
	        android:id="@+id/zoom_x_edit"
	        android:layout_weight="1"
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:singleLine="true"
	        android:minEms="4"
	        android:inputType="numberDecimal"
			 >
		</EditText>

	    <TextView 
	        android:layout_weight="1"
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:text="@string/zoom_y_prompt"
	        android:gravity="center"
	        android:singleLine="true"
	        />
	    <EditText
	        android:id="@+id/zoom_y_edit"
	        android:layout_weight="1"
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:singleLine="true"
	        android:minEms="4"
	        android:inputType="numberDecimal"
			 >
		</EditText>

	    <TextView 
	        android:layout_weight="1"
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:text="@string/zoom_z_prompt"
	        android:gravity="center"
	        android:singleLine="true"
	        />
	    <EditText
	        android:id="@+id/zoom_z_edit"
	        android:layout_weight="1"
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:singleLine="true"
	        android:minEms="4"
	        android:inputType="numberDecimal"
			 >
		</EditText>
    </LinearLayout>
    
    <TextView 
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="@string/shift_box_prompt"
        android:singleLine="true"
		android:layout_marginTop="16px"
        />
    <LinearLayout 
		android:orientation="horizontal"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
        android:layout_marginTop="6px"
	    >
	    <TextView 
	        android:layout_weight="1"
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:text="@string/shift_x_prompt"
	        android:gravity="center"
	        android:singleLine="true"
	        />
	    <EditText
	        android:id="@+id/shift_x_edit"
	        android:layout_weight="1"
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:singleLine="true"
	        android:minEms="4"
	        android:inputType="numberDecimal|numberSigned"
			 >
		</EditText>
	    <TextView 
	        android:layout_weight="1"
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:text="@string/shift_y_prompt"
	        android:gravity="center"
	        android:singleLine="true"
	        />
	    <EditText
	        android:id="@+id/shift_y_edit"
	        android:layout_weight="1"
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:singleLine="true"
	        android:minEms="4"
	        android:inputType="numberDecimal|numberSigned"
			 >
		</EditText>
	    <TextView 
	        android:layout_weight="1"
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:text="@string/shift_z_prompt"
	        android:gravity="center"
	        android:singleLine="true"
	        />
	    <EditText
	        android:id="@+id/shift_z_edit"
	        android:layout_weight="1"
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:singleLine="true"
	        android:minEms="4"
	        android:inputType="numberDecimal|numberSigned"
			 >
		</EditText>
	</LinearLayout>
    
    <TextView 
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="@string/rotate_box_prompt"
        android:singleLine="true"
		android:layout_marginTop="16px"
        />
    <LinearLayout 
		android:orientation="horizontal"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
        android:layout_marginTop="6px"
	    >
	    <TextView 
	        android:layout_weight="1"
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:text="@string/rotate_x_prompt"
	        android:layout_gravity="center_vertical"
	        android:gravity="center"
	        android:singleLine="false"
	        />
	    <EditText
	        android:id="@+id/rotate_x_edit"
	        android:layout_weight="1"
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:singleLine="true"
	        android:minEms="4"
	        android:inputType="numberDecimal|numberSigned"
			 >
		</EditText>
	    <TextView 
	        android:layout_weight="1"
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:text="@string/rotate_y_prompt"
	        android:layout_gravity="center_vertical"
	        android:gravity="center"
	        android:singleLine="false"
	        />
	    <EditText
	        android:id="@+id/rotate_y_edit"
	        android:layout_weight="1"
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:singleLine="true"
	        android:minEms="4"
	        android:inputType="numberDecimal|numberSigned"
			 >
		</EditText>
	    <TextView 
	        android:layout_weight="1"
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:text="@string/rotate_z_prompt"
	        android:layout_gravity="center_vertical"
	        android:gravity="center"
	        android:singleLine="false"
	        />
	    <EditText
	        android:id="@+id/rotate_z_edit"
	        android:layout_weight="1"
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:singleLine="true"
	        android:minEms="4"
	        android:inputType="numberDecimal|numberSigned"
			 >
		</EditText>
	</LinearLayout>

	<CheckBox
	    android:id="@+id/chkBoxNotShowAxisTitle"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
        android:layout_marginTop="6px"
	    android:text="@string/not_show_axis_and_title" />
    
    <Button
        android:id="@+id/apply_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="16px"
	    android:minEms="4"
        android:text="@string/ok" />
        
</LinearLayout>
</ScrollView>
</LinearLayout>