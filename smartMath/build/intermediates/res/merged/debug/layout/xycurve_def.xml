<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >
	<LinearLayout 
		android:id="@+id/curve_name_color_input"
		android:orientation="horizontal"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:layout_marginTop="5sp"
	    >
	    <TextView 
	        android:id="@+id/curve_name_prompt"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_marginLeft="5sp"
	        android:layout_marginRight="5sp"
	        android:text="@string/curve_title_prompt"
	        android:gravity="center"
	        android:singleLine="true"
	        />
	    <EditText
	        android:id="@+id/curve_name_edit"
	        android:layout_weight="1"
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:singleLine="true"
			 >
	    </EditText>
	    
	    <TextView 
	        android:id="@+id/curve_color_prompt"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_marginLeft="5sp"
	        android:layout_marginRight="5sp"
	        android:text="@string/curve_color_prompt"
	        android:gravity="center"
	        android:singleLine="true"
	        />
	    <Spinner 
	        android:id="@+id/curve_color_spinner"
	        android:layout_weight="1"
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:entries="@array/curve_color_array"
	    	/>
	    
	</LinearLayout>
	<LinearLayout 
		android:id="@+id/curve_point_line_input"
		android:orientation="horizontal"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:layout_marginTop="5sp"
	    android:gravity="center"
	    >
	    <TextView 
	        android:id="@+id/curve_point_style_prompt"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_marginLeft="5sp"
	        android:layout_marginRight="5sp"
	        android:text="@string/curve_point_style_prompt"
	        android:layout_weight="1"
	        android:gravity="center"
	        android:singleLine="true"
	        />

	    <Spinner 
	        android:id="@+id/curve_point_style_spinner"
	        android:layout_weight="2"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:entries="@array/curve_point_style_array"
	    	/>
	    
		<CheckBox 
		    android:id="@+id/curve_show_line_chkbox"
	        android:layout_weight="1"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text="@string/curve_show_line_chkbox_prompt"
	        android:checked="true"
		    />
	</LinearLayout>
	<LinearLayout 
		android:id="@+id/t_def_input"
		android:orientation="horizontal"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:layout_marginTop="5sp"
	    >
	    <TextView 
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text="@string/t_from_prompt"
	        android:gravity="center"
	        android:layout_marginLeft="5sp"
	        android:singleLine="true"
	        />
	    <EditText
	        android:id="@+id/t_from_edit"
	        android:layout_weight="1"
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:layout_marginLeft="5sp"
	        android:singleLine="true"/>
	        <!-- android:inputType="number|numberSigned|numberDecimal"
			/-->
	    <TextView 
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text="@string/t_to_prompt"
	        android:gravity="center"
	        android:layout_marginLeft="5sp"
	        android:singleLine="true"
	        />
	    <EditText
	        android:id="@+id/t_to_edit"
	        android:layout_weight="1"
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:layout_marginLeft="5sp"
	        android:singleLine="true"/>
	        <!-- android:inputType="number|numberSigned|numberDecimal"
			/-->
	    <TextView 
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text="@string/t_step_prompt"
	        android:gravity="center"
	        android:layout_marginLeft="5sp"
	        android:singleLine="true"
	        />
	    <EditText
	        android:id="@+id/t_step_edit"
	        android:layout_weight="1"
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:layout_marginLeft="5sp"
	        android:singleLine="true"
	        android:hint="@string/auto_value"/>
	        <!-- android:inputType="number|numberSigned|numberDecimal"
			/-->
    </LinearLayout>
	<LinearLayout 
		android:id="@+id/XY_def_input"
		android:orientation="horizontal"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:layout_marginTop="5sp"
	    >
	    <TextView 
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text="X(t) = "
	        android:id="@+id/x_t_prompt"
	        android:gravity="center"
	        android:layout_marginLeft="5sp"
	        android:singleLine="true"
	        />
	    <EditText
	        android:id="@+id/X_expression_edit"
	        android:layout_weight="1"
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:layout_marginLeft="5sp"
	        android:singleLine="true"
			/>
	    <TextView 
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text="Y(t) = "
	        android:id="@+id/y_t_prompt"
	        android:gravity="center"
	        android:layout_marginLeft="5sp"
	        android:layout_marginRight="5sp"
	        android:singleLine="true"
	        />
	    <EditText
	        android:id="@+id/Y_expression_edit"
	        android:layout_weight="1"
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:layout_marginLeft="5sp"
	        android:singleLine="true"
			/>
	</LinearLayout>
	<LinearLayout 
		android:id="@+id/curve_ctrl_btns"
		android:orientation="horizontal"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:layout_marginTop="5sp"
	    >
	   <Button
			android:id="@+id/delete_curve_btn"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="@string/delete_curve_btn_text"
		/>
		<Button
			android:id="@+id/clear_curve_btn"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="@string/clear_curve_btn_text"
			android:layout_marginLeft="5sp"
		/>
		
	</LinearLayout>
</LinearLayout>