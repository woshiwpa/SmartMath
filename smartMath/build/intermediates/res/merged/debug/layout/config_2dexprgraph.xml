<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/transparent_background"
    >"
<ScrollView 
	android:layout_width="fill_parent"
	android:layout_height="wrap_content"
	>
<LinearLayout android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >
        
    <LinearLayout 
		android:orientation="horizontal"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
        android:layout_marginTop="6px"
	    >
	    <TextView 
	        android:id="@+id/x_from_prompt"
	        android:layout_weight="0.8"
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:text="@string/from"
	        android:gravity="center"
	        android:layout_gravity="center_vertical"
	        android:singleLine="true"
	        />
	    <EditText
	        android:id="@+id/x_from_edit"
	        android:layout_weight="1"
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:singleLine="true"
	        android:minEms="4"
	        android:inputType="numberDecimal|numberSigned"
			 >
		</EditText>

	    <TextView 
	        android:layout_weight="1"
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:text="@string/to"
	        android:gravity="center"
	        android:singleLine="true"
	        />
	    <EditText
	        android:id="@+id/x_to_edit"
	        android:layout_weight="1"
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:singleLine="true"
	        android:minEms="4"
	        android:inputType="numberDecimal|numberSigned"
			 >
		</EditText>

    </LinearLayout>
    
    <TextView 
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text=""
        android:id="@+id/x_input_note"
        android:gravity="left"
        android:maxLines="3"
        />
    
    <LinearLayout 
		android:orientation="horizontal"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
        android:layout_marginTop="6px"
	    >
	    <TextView 
	        android:id="@+id/y_from_prompt"
	        android:layout_weight="0.8"
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:text="@string/from"
	        android:gravity="center"
	        android:layout_gravity="center_vertical"
	        android:singleLine="true"
	        />
	    <EditText
	        android:id="@+id/y_from_edit"
	        android:layout_weight="1"
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:singleLine="true"
	        android:minEms="4"
	        android:inputType="numberDecimal|numberSigned"
			 >
		</EditText>

	    <TextView 
	        android:layout_weight="1"
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:text="@string/to"
	        android:gravity="center"
	        android:singleLine="true"
	        />
	    <EditText
	        android:id="@+id/y_to_edit"
	        android:layout_weight="1"
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:singleLine="true"
	        android:minEms="4"
	        android:inputType="numberDecimal|numberSigned"
			 >
		</EditText>

    </LinearLayout>
    
    <TextView 
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text=""
        android:id="@+id/y_input_note"
        android:gravity="left"
        android:maxLines="3"
        />
    
    <LinearLayout 
		android:orientation="horizontal"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
        android:layout_marginTop="3px"
	    >
	    <TextView 
	        android:id="@+id/number_of_steps_prompt"
	        android:layout_weight="0.8"
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:text="@string/number_of_steps"
	        android:gravity="center"
	        android:layout_gravity="center_vertical"
	        android:singleLine="false"
	        />
	    <EditText
	        android:id="@+id/number_of_steps_edit"
	        android:layout_weight="1"
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:singleLine="true"
	        android:minEms="4"
	        android:inputType="numberDecimal"
			 >
		</EditText>
		<CheckBox 
	        android:id="@+id/detect_singular_point"
	        android:layout_weight="0.6"
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:text="@string/detect_singular_points"
	        android:gravity="center"
	        android:layout_gravity="center_vertical"
	        android:singleLine="false"
		    />
	</LinearLayout>

    <TextView 
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text=""
        android:id="@+id/number_of_steps_input_note"
        android:gravity="left"
        android:maxLines="3"
        />
    
    <Button
        android:id="@+id/apply_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="6px"
	    android:minEms="4"
        android:text="@string/ok" />
        
</LinearLayout>
</ScrollView>
</LinearLayout>