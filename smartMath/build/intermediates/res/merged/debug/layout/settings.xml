<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/settings_panel"
	android:orientation="vertical"
	android:layout_width="wrap_content"
	android:layout_height="wrap_content"
	android:gravity="center"
	android:layout_gravity="center" >

	<LinearLayout
	    android:id="@+id/width_control"
		android:orientation="vertical"
		android:layout_width="match_parent"
		android:layout_height="1px"
		android:gravity="center"
		android:layout_gravity="center" />
	
	<ScrollView 
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		>
		<LinearLayout 
			android:orientation="vertical"
			android:layout_width="match_parent"
			android:layout_height="wrap_content">

			<TextView android:id="@+id/number_format" 
			    android:layout_width="match_parent"
				android:layout_height="wrap_content" 
				android:text="@string/setting_number_format_prompt"/>
		
		
		    <Spinner android:id="@+id/setting_number_format"
		        android:layout_width="match_parent"
		        android:layout_height="wrap_content"
		        android:drawSelectorOnTop="true"
		        android:prompt="@string/setting_number_format_prompt"
		    />
				
		
			<TextView android:id="@+id/extreme_value" 
			    android:layout_width="match_parent"
				android:layout_height="wrap_content" 
				android:text="@string/setting_extreme_value_prompt" />
		
		
		    <Spinner android:id="@+id/setting_extreme_value"
		        android:layout_width="match_parent"
		        android:layout_height="wrap_content"
		        android:drawSelectorOnTop="true"
		        android:prompt="@string/setting_extreme_value_prompt"
		    />
				
			<TextView android:id="@+id/record_length"
				android:layout_width="match_parent"
				android:layout_height="wrap_content" 
				android:text="@string/setting_record_length_prompt" />
		
				
		    <Spinner android:id="@+id/setting_record_length"
		        android:layout_width="match_parent"
		        android:layout_height="wrap_content"
		        android:drawSelectorOnTop="true"
		        android:prompt="@string/setting_record_length_prompt"
		    />
				
			<TextView android:id="@+id/variable_range"
				android:layout_width="match_parent"
				android:layout_height="wrap_content" 
				android:text="@string/setting_variable_range_prompt" />
			
			<LinearLayout 
				android:orientation="horizontal"
				android:layout_width="match_parent"
				android:layout_height="match_parent">
			    <TextView android:id="@+id/variable_from_prompt"
					android:layout_width="match_parent"
					android:layout_height="wrap_content" 
					android:layout_weight="1"
					android:text="@string/from"
					android:gravity="center" />
				<EditText android:id="@+id/variable_from"
				    android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:layout_weight="1"
					android:gravity="center"
					android:inputType="numberSigned|numberDecimal" />
			    <TextView android:id="@+id/variable_to_prompt"
					android:layout_width="match_parent"
					android:layout_height="wrap_content" 
					android:layout_weight="1"
					android:gravity="center"
					android:text="@string/to" />
				<EditText android:id="@+id/variable_to"
				    android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:layout_weight="1"
					android:gravity="center"
					android:inputType="numberSigned|numberDecimal" />
			</LinearLayout>			
			
		    <CheckBox android:id="@+id/enable_btn_press_vibration"
		        android:layout_width="match_parent"
		        android:layout_height="wrap_content"
		        android:text="@string/enable_btn_press_vibration_prompt"
		    />
	
			<!-- TextView android:id="@+id/setting_flash_txt"
				android:layout_width="match_parent"
				android:layout_height="wrap_content" 
				android:text="@string/setting_flash_mode_prompt" />
		
		    <Spinner android:id="@+id/setting_flash_mode"
		        android:layout_width="match_parent"
		        android:layout_height="wrap_content"
		        android:drawSelectorOnTop="true"
		        android:prompt="@string/setting_flash_mode_prompt"
		    />
	
			<TextView android:id="@+id/setting_photo_taken_from_txt"
				android:layout_width="match_parent"
				android:layout_height="wrap_content" 
				android:text="@string/setting_photo_taken_from_prompt" />
		
		    <Spinner android:id="@+id/setting_photo_taken_from"
		        android:layout_width="match_parent"
		        android:layout_height="wrap_content"
		        android:drawSelectorOnTop="true"
		        android:prompt="@string/setting_photo_taken_from_prompt"
		    />
		    				
		    <CheckBox android:id="@+id/clear_input_txt_before_take_photo"
		        android:layout_width="match_parent"
		        android:layout_height="wrap_content"
		        android:text="@string/clear_input_txt_before_take_photo_prompt"
		    /-->
	
		    <TextView android:id="@+id/appdata_storage_path"
				android:layout_width="match_parent"
				android:layout_height="wrap_content" 
				android:text="@string/setting_application_data_storage_prompt" />
		    
			<Spinner android:id="@+id/setting_appdata_storage_path"
		        android:layout_width="match_parent"
		        android:layout_height="wrap_content"
		        android:drawSelectorOnTop="true"
		        android:prompt="@string/setting_application_data_storage_prompt"
		    />
		    
			<TextView android:id="@+id/external_storage_mnt_folder_prompt"
				android:layout_width="match_parent"
				android:layout_height="wrap_content" 
				android:text="@string/external_storage_mnt_folder_prompt" />
			
			<EditText android:id="@+id/external_storage_mnt_folder_edit"
			    android:layout_width="match_parent"
				android:layout_height="wrap_content" 
				android:inputType="none"
				android:clickable="false" 
		        android:cursorVisible="false" 
		        android:focusable="false" 
		        android:focusableInTouchMode="false" />
			
			<TextView android:id="@+id/system_folder_prompt"
				android:layout_width="match_parent"
				android:layout_height="wrap_content" 
				android:text="@string/app_folder_prompt" />
			
			<EditText android:id="@+id/system_folder_edit"
			    android:layout_width="match_parent"
				android:layout_height="wrap_content" 
				android:inputType="none"
				android:clickable="false" 
		        android:cursorVisible="false" 
		        android:focusable="false" 
		        android:focusableInTouchMode="false" />
			
		    <LinearLayout
		        android:id="@+id/buttonHolder"
				android:orientation="horizontal"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:gravity="center"
				android:layout_gravity="center">
			   <Button
					android:id="@+id/btn_ok"
					android:layout_weight="1"
			        android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:text="@string/ok"
				/>
			   <Button
					android:id="@+id/btn_cancel"
					android:layout_weight="1"
			        android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:text="@string/cancel"
				/>
		    </LinearLayout>
		</LinearLayout>
    </ScrollView>
</LinearLayout>
